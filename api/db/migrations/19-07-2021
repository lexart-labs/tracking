//TABLA HORARIOS FIJOS
//Agregar null al "end"
CREATE TABLE `lextracking`.`users_hours` ( `user_hour_id` INT UNSIGNED NOT NULL AUTO_INCREMENT , `user_id` INT UNSIGNED NOT NULL , `day` ENUM('lunes','martes','miercoles','jueves','viernes','sabado ','domingo') NOT NULL , `start` TIMESTAMP NOT NULL , `end` TIMESTAMP NOT NULL , `created_at` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP , `updated_at` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP , `deleted_at` TIMESTAMP NULL DEFAULT NULL , PRIMARY KEY (`user_hour_id`)) ENGINE = InnoDB;
ALTER TABLE `users_hours` ADD `description` ENUM('Horario Fijo') NOT NULL AFTER `day`;
ALTER TABLE `users_hours` CHANGE `description` `title` ENUM('Horario Fijo') CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL;
//USER_ID CLAVE PRIMARIA
ALTER TABLE `users_hours` ADD INDEX(`user_id`);

//TABLA RELACION
ALTER TABLE `users_hours` ADD CONSTRAINT `users_hours_ref_user` FOREIGN KEY (`user_id`) REFERENCES `users`(`id`) ON DELETE CASCADE ON UPDATE NO ACTION;